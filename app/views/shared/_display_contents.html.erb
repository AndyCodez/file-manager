<% if @folders.empty? && @user_files.empty? %>
  No Files/Folders
<% else %>
  <ul>
    <% if @folders %>
      <% @folders.each do |folder| %>
        <li>
          <i class="fa fa-folder"></i>
          <%= link_to folder.name, folder %>
          <%= link_to(folder, method: :delete, data: { confirm: "Are you sure you want to delete this folder and all its contents?" } ) do %>
            <%= fa_icon "trash" %>
          <% end %>
        </li>
      <% end %> 
    <% end %>

    <% if @user_files %> 
      <% @user_files.each do |user_file| %>
        <li>
          <i class="fa fa-file"></i>
          <%= link_to File.basename(user_file.file.url), user_file.file.url %>
          <%= link_to(user_file, method: :delete, data: { confirm: "Are you sure you want to delete this file?" } ) do %>
            <%= fa_icon "trash" %>
          <% end %>
        </li>
      <% end %>    
    <% end %>
  </ul>
<% end %>