<div class="row">
  <div class="col-md-8 col-md-offset-2">
  	<div class="breadcrumbs">
	  <h4>
	    <%= render 'shared/root_path' %>
	  </h4>
	</div>

	<%= form_for @user_file do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>
	  <%= f.label "Please select a file to upload" %>
	  <%= f.file_field :file %>
	  <%= f.hidden_field :folder_id, :value => params[:folder_id] %>
	  <%= f.submit 'Upload file', class: "btn btn-primary" %>
	<% end %>  	
  </div>
</div>
