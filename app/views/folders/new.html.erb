<div class="row">
  <div class="col-md-8 col-md-offset-2">
  	<div class="breadcrumbs">
	  <h4>
	    <%= link_to(root_path) do %>
          <%= fa_icon "home" %>
        <% end %>
	    Path: /
	  </h4>
	</div>

	<%= form_for @folder do |f| %>
	  <%= render 'error_messages' %>
	  <%= f.label 'Enter folder name:' %> <br>
	  <%= f.text_field :name, placeholder: 'Folder Name' %> <br>
	  <%= f.hidden_field :parent_id, :value => params[:folder_id] %> 
	  <%= f.submit 'Save', class: 'btn btn-primary' %>
	<% end %>  	
  </div>
</div>
