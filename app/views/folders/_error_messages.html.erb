<% if @folder.errors.any? %>
  <div id="error_explanation">
  	<div class="alert alert-danger">
  	  This form contains <%= pluralize(@folder.errors.count, "error") %>.
  	</div>
  	<ul>
  	  <% @folder.errors.full_messages.each do |message| %>	
  	    <li><%= message %></li>
  	  <% end %>
  	</ul>
  </div>
<% end %>